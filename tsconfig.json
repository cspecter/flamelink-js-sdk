{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
