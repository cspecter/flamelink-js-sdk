{
  "name": "flamelink-js-sdk",
  "version": "1.0.0",
  "description": "Monorepo for all the Flamelink JavaScript SDK repos",
  "private": true,
  "author": "Flamelink <feedback@flamelink.io> (https://flamelink.io)",
  "license": "MIT",
  "keywords": [
    "flamelink",
    "firelink",
    "firebase",
    "firestore",
    "headless",
    "cms",
    "javascript",
    "sdk",
    "web",
    "node",
    "caas",
    "real-time"
  ],
  "engines": {
    "yarn": "^1.2.1",
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jperasmus/flamelink-js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/jperasmus/flamelink-js-sdk/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "brotli": "^1.3.2",
    "docsify-cli": "^4.3.0",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.7",
    "lerna-changelog": "^0.8.2",
    "precise-commits": "^1.0.2",
    "prettier": "1.16.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-gzip": "^2.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-terser": "^4.0.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "precise-commits"
    }
  },
  "changelog": {
    "nextVersion": "Unreleased",
    "labels": {
      "feature": "New Feature",
      "bug": "Bug Fix"
    },
    "cacheDir": ".changelog"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna link && yarn link",
    "changelog": "lerna-changelog",
    "create-package": "lerna create",
    "dev": "lerna exec --parallel --ignore '@flamelink/sdk-*-types' yarn run dev",
    "build": "lerna run build",
    "test": "lerna exec --ignore '@flamelink/sdk-*-types' yarn run test",
    "test:ci": "jest",
    "test:watch": "jest --watch",
    "publish": "lerna run build && lerna publish",
    "lint:ci": "tslint -p tsconfig.json -c tslint.json && prettier 'packages/**/*.ts'",
    "lint": "tslint --fix -p tsconfig.json -c tslint.json && prettier --write 'packages/**/*.ts'",
    "serve-docs": "docsify serve ./docs -o true -p 4000"
  }
}
